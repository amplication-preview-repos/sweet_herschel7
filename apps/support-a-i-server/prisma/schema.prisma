datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model TelegramMessage {
  createdAt   DateTime  @default(now())
  id          String    @id @default(cuid())
  messageText String?
  timestamp   DateTime?
  updatedAt   DateTime  @updatedAt
  userId      String?
}

model ChatGptResponse {
  createdAt    DateTime  @default(now())
  id           String    @id @default(cuid())
  requestId    String?
  responseText String?
  timestamp    DateTime?
  updatedAt    DateTime  @updatedAt
}

model Bitrix24Integration {
  apiEndpoint      String?
  authorizationKey String?
  createdAt        DateTime @default(now())
  id               String   @id @default(cuid())
  integrationName  String?
  updatedAt        DateTime @updatedAt
}
